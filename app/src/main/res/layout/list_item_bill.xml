<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

  <EditText
      android:id="@+id/bill_list_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="textPersonName"
      android:text="Bill Name"
      android:textAlignment="center"
      android:textStyle="bold"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true" />

  <EditText
      android:id="@+id/bill_amount_due"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/bill_list_title"
      android:ems="10"
      android:inputType="number"
      android:text="Balance Due" />

  <EditText
      android:id="@+id/bill_date_due"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/bill_amount_due"
      android:layout_toEndOf="@+id/bill_amount_due"
      android:ems="10"
      android:inputType="date"
      android:text="1/1/2017" />

  <EditText
      android:id="@+id/bill_URL"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/bill_amount_due"
      android:layout_centerHorizontal="true"
      android:ems="10"
      android:inputType="date"
      android:text="www.google.com" />

</RelativeLayout>
